{
  "builders": [
    {
      "type": "docker",
      "image": "zeus.wjoel.com:5000/alpine-java8:3.3",
      "commit": true,
      "run_command": [
        "-d", "-i", "--dns=8.8.8.8",
        "-t", "{{.Image}}", "/bin/sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /opt/bin",
        "cd /opt",
        "wget https://releases.hashicorp.com/consul-template/0.14.0/consul-template_0.14.0_linux_amd64.zip -O consul-template.zip",
        "unzip consul-template.zip",
        "mv consul-template bin",
        "wget https://packages.graylog2.org/releases/graylog/graylog-2.0.0-beta.1.tgz -O /opt/graylog.tgz",
        "tar xfz graylog.tgz",
        "apk-install supervisor",
        "mkdir /etc/supervisor.d"
      ]
    },
    {
      "type": "file",
      "source": "files/graylog-supervisord.ini",
      "destination": "/etc/supervisor.d/graylog.ini"
    },
    {
      "type": "file",
      "source": "files/graylog.conf.tmpl",
      "destination": "/etc/graylog.conf.tmpl"
    },
    {
      "type": "file",
      "source": "files/elasticsearch.yml.tmpl",
      "destination": "/etc/elasticsearch.yml.tmpl"
    },
    {
      "type": "file",
      "source": "files/run-graylog.sh",
      "destination": "/usr/bin/run-graylog.sh"
    },
    {
      "type": "file",
      "source": "files/run-consul-template.sh",
      "destination": "/usr/bin/run-consul-template.sh"
    },
    {
      "type": "file",
      "source": "files/stop-graylog.sh",
      "destination": "/usr/bin/stop-graylog.sh"
    },
    {
      "type": "shell",
      "inline": [
        "chmod +x /usr/bin/run-graylog.sh",
        "chmod +x /usr/bin/stop-graylog.sh",
        "chmod +x /usr/bin/run-consul-template.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "zeus.wjoel.com:5000/nomadic-graylog",
        "tag": "2.0",
        "force": true
      },
      {
        "type": "docker-dockerfile",
        "cmd": ["/usr/bin/supervisord", "--nodaemon", "--configuration", "/etc/supervisord.conf"],
        "expose": "9000"
      },
      "docker-push"
    ]
  ]
}
